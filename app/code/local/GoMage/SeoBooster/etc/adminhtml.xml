                                    </gomage_activation>
                                    <gomage_notification>
                                        <title>GoMage Notifications</title>
                                    </gomage_notification>
                                    <gomage_seobooster>
                                        <title>GoMage Seo Booster</title>
                                    </gomage_seobooster>
                                </children>
